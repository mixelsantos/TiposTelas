<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiposTelas.TipoPagina.Navigation.Page1"
             Title="Titulo da Navigation">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="Page.png"/>
        <ToolbarItem Text="Ordenar" Icon="play.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eu Sou uma ContentePage"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Ir para Página 2" Clicked="Button_Clicked"/>
            <Button Text="Chamar Modal" Clicked="Button_Clicked_1"/>
            <Button Text="Chamar Master" Clicked="Button_Clicked_2"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>